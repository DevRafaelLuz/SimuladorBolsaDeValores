@model BolsaValores.Models.Usuario

@{
    ViewData["Title"] = "Bolsa de Valores";
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="login-container">
    <h2>Login</h2>

    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
    {
        <div>
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email)
        </div>
        <div>
            @Html.LabelFor(m => m.Senha)
            @Html.PasswordFor(m => m.Senha)
        </div>
        <button type="submit">Entrar</button>
        <a href="@Url.Action("Novo", "Cadastro")">
            <button type="button">Cadastrar Novo Usu√°rio</button>
        </a>
    }

    @if (ViewBag.Mensagem != null)
    {
        <p class="mensagem-erro">@ViewBag.Mensagem</p>
    }
</div>